<p id="notice"><%= notice %></p>

<h1>Listing Students</h1>

<table>
  <% @students.each do |student| %>
  <thead>
    <tr>
      <th>Student Name</th>
      <th>Student Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.email %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'New Grade', new_grade_path(student_id: student.id) %></td>
      </tr>
      <thead>
        <tr>
          <th>Date</th>
          <th>Assignment Name</th>
          <th>Grade</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <% student.grades.each do |grade| %>
        <tr>
          <td><%= grade.date %></td>
          <td><%= grade.assignment_name %></td>
          <td><%= grade.grade %></td>
          <td><%= link_to 'Show', student %></td>
          <td><%= link_to 'Edit', edit_student_path(student) %></td>
          <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path %>

<p><%= link_to 'Logout', logout_path, method: :delete %></p>
