<div class="container">
  <p id="notice"><%= notice %></p>

  <p class="text-right"><%= link_to 'Logout', logout_path, method: :delete %></p>

  <h1 class="text-center">Listing Grades</h1>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th class="success">Date</th>
        <th class="success">Assignment name</th>
        <th class="success">Grade</th>
        <% if session[:user_type] == "Teacher"%>
          <th class="success">Student Id</th>
          <th colspan="3" class="success"></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% @grades.each do |grade| %>
        <tr>
          <td><%= grade.date %></td>
          <td><%= grade.assignment_name %></td>
          <td><%= grade.grade %></td>
          <% if session[:user_type] == "Teacher"%>
            <td><%= grade.student_id %></td>
            <td><%= link_to 'Show', grade %></td>
            <td><%= link_to 'Edit', edit_grade_path(grade) %></td>
            <td><%= link_to 'Destroy', grade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <% if session[:user_type] == "Teacher"%>
    <%= link_to 'New Grade', new_grade_path %>
  <% end %>
</div>
