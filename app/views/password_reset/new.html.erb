<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<div class="container">
  <h1>Forgot password</h1>
  <p>Please login below.</p>

      <%= form_tag(password_reset_create_path) do %>

        <p><%= label_tag :email %>
        <%= email_field_tag :email %></p>

        <%= submit_tag "Submit" %>
      <% end %>
</div>
